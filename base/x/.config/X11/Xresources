*.color13:    #FF92D0
*.color6:     #8BE9FD
*.color14:    #9AEDFE
*.color7:     #BFBFBF
*.color15:    #E6E6E6

! Тема курсора
Xcursor.theme: capitaine-cursors

! Размер курсора, значения (16,32,48,64)
Xcursor.size: 16


! Nsxiv
Nsxiv.window.background: #000000
Nsxiv.window.foreground: #e7e7e7
